# =============================================================================
# ASOUD Platform - Development Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed
# =============================================================================

# Django Configuration
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=dev-secret-key-change-in-production-min-50-chars-long
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Note: In development mode, Django uses SQLite by default
# These are only used if you switch to PostgreSQL in dev
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=asoud_db
DATABASE_USERNAME=asoud_user
DATABASE_PASSWORD=asoud_password_dev_2024
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis Configuration
# -----------------------------------------------------------------------------
# Note: In development mode, Django uses in-memory cache by default
# These are only used if you switch to Redis in dev
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_dev_2024
REDIS_URL=redis://:redis_password_dev_2024@redis:6379/0

# SMS Configuration
# -----------------------------------------------------------------------------
SMS_API=development-key
SMS_DISABLE_SEND=true

# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# CSRF Configuration
# -----------------------------------------------------------------------------
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000,http://127.0.0.1:3000

# Development-specific flags
# -----------------------------------------------------------------------------
CREATE_SUPERUSER=false
LOAD_SAMPLE_DATA=false

# Email Configuration (Development)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=noreply@asoud.ir

# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://:redis_password_dev_2024@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password_dev_2024@redis:6379/0

# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG

# Optional: Debugging
# -----------------------------------------------------------------------------
# DJANGO_LOG_LEVEL=DEBUG
# SQL_DEBUG=True
